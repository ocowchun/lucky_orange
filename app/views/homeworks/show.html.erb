<div>
	<p>	作業名稱: <%=@homework.name%>  </p>

	<div class="panel panel-default">
		<div class="panel-heading">作業說明</div>
		<div class="panel-body">
		<%=render_homework_content @homework%>
		</div>
	</div>
</div>


<%= link_to "繳交作業", new_homework_have_homework_path(@homework),class:"btn btn-default" %>
<% if can? :edit,@homework %>
	<%= link_to "編輯", edit_homework_path(@homework),class:"btn btn-success" %>
<% end %>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Repo url</th>
			<th>最後更新日期</th>
		</tr>
	</thead>
	<tbody>

		<%@have_homeworks.each do|work|%>
		<tr>
			<td><%= link_to work.user.name, user_path(work.user) %>  </td>
			<td><%= link_to work.repo_url, work.repo_url,target:"_blank" %>  </td>
			<td><%= last_update(work)%>  </td>
		</tr>
		<%end%>
	</tbody>
</table>

<%= paginate @have_homeworks %>
