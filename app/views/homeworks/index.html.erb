<table class="table table-striped">
  <thead>
    <tr>
      <th>作業名稱</th>
      <th>截止日期</th>
      <th>完成人數</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%@homeworks.each do|homework|%>  
    <tr>
      <td><%= link_to homework.name, homework_path(homework) %>  </td>
      <td><%= date_format(homework.deadline)%>   </td>
      <td></td>
      <% if can? :update,homework %>
      <td>
        <%= link_to "edit", edit_homework_path(homework) %>

      </td>
      <% end %>
    </tr>
    <%end%>  
    
  </tbody>
</table>